  callbackToken                   BigInt?
  callbackOrderId                 String  @default("")
  callbackTerminalNumber          BigInt?
  callbackRRN                     BigInt?
  callbackStatus                  Int?
  callbackAmountAsString          String  @default("")
  callbackCardNumberHashed        String  @default("")
  callbackAmount                  BigInt?
  confirmResponseStatus           Int?
  confirmResponseCardNumberMasked String  @default("")
  confirmResponseToken            BigInt?
  confirmResponseRRN              BigInt?
  reversalResponseStatus          Int?
  reversalResponseMessage         String  @default("")
  reversalResponseToken           BigInt?
  Order                           Order?  @relation("Order_ParsianPaymentInfo")
